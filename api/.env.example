# SmoothOperator API Environment Variables
# Copy this to .env and fill in your values

# Security (REQUIRED)
APP_PASSCODE=your-secret-passcode-here
SESSION_SECRET=your-256-bit-secret-key-here

# CORS (adjust for your frontend URL)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Server Configuration
PORT=8000
HOST=0.0.0.0
WORKERS=1
DEBUG=false
LOG_LEVEL=INFO

# Session TTLs (in seconds)
SESSION_TTL=3600
THREAD_TTL=7200
